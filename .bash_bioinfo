#!/usr/local/bin/bash

# Dependencies
# - samtools

# FASTA description : sequence ID + sequence length
fadesc () {
	samtools faidx ${1}
	cat "${1}.fai" | cut -f1,2
	rm "${1}.fai"
}

# Extract sequences from FASTA
faget (){
	FASTA=${1}
	SEQIDS=${2}
	if [[ ${FASTA} == "" || $SEQIDS == "" ]] ; then
		echo "Usage : faget FASTA_FILE SEQID_LIST"
	else
		if [[ ! -e "${1}.fai" ]] ; then samtools faidx ${1} ; fi
		xargs samtools faidx ${1} < ${2}
	fi
}

gff (){
	cat <<EOF

Column 1: "seqid"
Column 2: "source"
Column 3: "type"
Column 4: "start"
Column 5: "end"
Column 6: "score"
Column 7: "strand"
Column 8: "phase"
Column 9: "attributes"

More info at https://github.com/The-Sequence-Ontology/Specifications/blob/master/gff3.md

EOF
}

new_bash_script (){
	wget -O ${1} https://raw.githubusercontent.com/thbtmntgn/script_templates/master/bash_script_template.sh
}
